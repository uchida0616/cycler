<div class="login_box">
  <h1 class="login_header">Cycler</h1>
  <%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>
  <div>
    <%= f.email_field :email, placeholder: "メールアドレス", class: "email_field" %>
  </div>
  <div>
    <%= f.password_field :password, placeholder: "パスワード", class: "password_field" %>
  </div>
    <%= f.submit "Log in", class: "login_btn" %>
  <% end %>
  </div>
</div>
<div class="new_signup_box">
  <p>アカウントをお持ちでないですか？</p>
  <p class="siginup_url"><%= link_to "新規登録", new_user_path %></p>
</div>
