<% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= @user.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_with(model: @user, local: true ) do |form| %>
  <div class="user_name">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div class="user_email">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>
  <div class="user_password">
    <%= form.label :password %>
    <%= form.text_field :password %>
  </div>
  <div class="user_password_confirmation">
    <%= form.label :password_confirmation %>
    <%= form.text_field :password_confirmation %>
  </div>
  <div class="icon_field">
    <%= image_tag(@user.icon.url) if @user.icon && @user.icon.url %>
    <%= form.file_field :icon %>
    <%= form.hidden_field :icon_cache %>
  </div>
    <%= form.submit %>
<% end %>
